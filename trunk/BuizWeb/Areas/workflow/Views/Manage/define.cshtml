                            header: '编码',
                            dataIndex: 'Name',
                            width: 80
                        }, {
                            header: '名称',
                            dataIndex: 'BuizName',
                            flex: 1
                        }],
                        split: true,
                        tbar: [
                              { xtype: 'button', iconCls: 'iconNew', text: '', tooltip: '新建组织', tooltipType: 'title', handler: function (source, e) { } },
                              { xtype: 'tbseparator' },
                              { xtype: 'tbfill' },
                              { xtype: 'button', iconCls: 'iconRefresh', text: '', tooltip: '刷新', tooltipType: 'title', handler: function (source, e) { } }
                            ],
                        width: 200,
                        listeners: {
                            itemclick: function (view, record, item, index, e) {
                                //alert(record.data.ID);
                                Ext.Ajax.request({
                                    url: '/workflow/Manage/getTemplate',
                                    params: {
                                        templateId: record.data.ID
                                    },
                                    success: function (response) {
                                        //alert(response.responseText);
                                        var result = Ext.JSON.decode(response.responseText).data;
                                        wfg = new WFGraph({ id: "myCanvas", data: result });
                                        //wfg.data = ;
                                        wfg.fullCanvas();
                                    },
                                    failure: function (response) {
                                        alert(response.responseText);
                                    }
                                });
                            }
                        }
                    }
                    ]
                }
                ]
            });
